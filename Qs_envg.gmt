km_pos="1.75/3.00"

prm_algn="BR"
prm_pos="1.0/1.75"

fr_km_sz="14p"

cpt_algn="BR"
cpt_pos="1.60i/0.15i"
cpt_off="0.1i/0.3i"




awk '{print $2,$1,$3}' ${testdir}/envnodes${Z}g_1-2_${sgmy}.txt > test.txt

